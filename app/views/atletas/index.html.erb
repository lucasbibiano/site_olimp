<% @atletas.each do |atleta| %>
  <tr>
    <td><%= atleta.nome %></td>
    <td><%= atleta.idade %></td>
    <td><%= atleta.sexo %></td>
    <td><%= atleta.organizacao %></td>
    <td><%= link_to 'Show', atleta %></td>
    <td><%= link_to 'Edit', edit_atleta_path(atleta) %></td>
    <td><%= link_to 'Destroy', atleta, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

